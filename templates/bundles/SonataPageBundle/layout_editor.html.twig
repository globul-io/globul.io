{% if sonata_page.isEditor %}
    <ul class="nav navbar-nav navbar-right">
        {% if sonata_page.isEditor %}
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-globe" aria-hidden="true"></i> {{ "header.page"|trans({}, 'SonataPageBundle') }}
                </a>

                <ul class="dropdown-menu">
                    {% if page is defined %}
                        <li>
                            <a href="{{ sonata_admin.objectUrl('sonata.page.admin.page', 'edit', page) }}"
                               target="_blank">
                                <i class="fa fa-pencil-square-o"
                                   aria-hidden="true"></i> {{ "header.edit_page"|trans({}, 'SonataPageBundle') }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ sonata_admin.objectUrl('sonata.page.admin.page', 'compose', page) }}">
                                <i class="fa fa-magic"
                                   aria-hidden="true"></i> {{ 'header.compose_page'|trans({}, 'SonataPageBundle') }}
                            </a>
                        </li>
                        <li class="divider-vertical"></li>
                        <li>
                            <a href="{{ sonata_admin.objectUrl('sonata.page.admin.page', 'create', page) }}"
                               target="_blank">
                                <i class="fa fa-code-fork"
                                   aria-hidden="true"></i> {{ "header.create_snapshot"|trans({}, 'SonataPageBundle') }}
                            </a>
                        </li>
                    {% endif %}

                    {% set sites = sonata_page.siteavailables %}

                    {% if sites|length > 1 and site is defined %}
                        <li class="dropdown-submenu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-globe" aria-hidden="true"></i> {{ site.name }}
                            </a>
                            <ul class="dropdown-menu">
                                {% for site in sites %}
                                    <li><a href="{{ site.url }}">{{ site.name }}</a></li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endif %}

                    <li class="dropdown-submenu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-bars"
                               aria-hidden="true"></i> {{ "header.pages"|trans({}, 'SonataPageBundle') }}
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ sonata_admin.url('sonata.page.admin.page', 'list') }}" target="_blank">
                                    <i class="fa fa-list"
                                       aria-hidden="true"></i> {{ "header.view_all_pages"|trans({}, 'SonataPageBundle') }}
                                </a>
                            </li>

                            {% if error_codes is defined and error_codes|length %}
                                <li>
                                    <a href="{{ path('sonata_page_exceptions_list') }}">
                                        <i class="fa fa-exclamation-triangle"
                                           aria-hidden="true"></i> {{ "header.view_all_exceptions"|trans({}, 'SonataPageBundle') }}
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </li>
                </ul>
            </li>
        {% endif %}
    </ul>
{% endif %}
